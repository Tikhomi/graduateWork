<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                                       http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <!-- поля user_info -->
    <changeSet id="createUserInfoTable" author="Valeriya">
        <createTable tableName="user_info">
            <column name="id_user_info" type="BIGINT">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="name" type="VARCHAR(255)"/>
            <column name="lastname" type="VARCHAR(255)"/>
            <column name="patronymic" type="VARCHAR(255)"/>
            <column name="birthday" type="DATE"/>
            <column name="id_user" type="BIGINT"/>
            <column name="id_specification" type="BIGINT"/>
            <column name="id_user_type" type="BIGINT"/>
        </createTable>
    </changeSet>

    <!-- внешние ключи -->
    <changeSet id="addForeignKeysToUserInfo" author="yourName">
        <addForeignKeyConstraint baseTableName="user_info" baseColumnNames="id_user"
                                 constraintName="fk_users" referencedTableName="users"
                                 referencedColumnNames="id_user" onDelete="CASCADE"/>
        <addForeignKeyConstraint baseTableName="user_info" baseColumnNames="id_specification"
                                 constraintName="fk_specification_dic" referencedTableName="specification_dic"
                                 referencedColumnNames="id_specification" onDelete="CASCADE"/>
        <addForeignKeyConstraint baseTableName="user_info" baseColumnNames="id_user_type"
                                 constraintName="fk_user_type" referencedTableName="user_type"
                                 referencedColumnNames="id_user_type" onDelete="CASCADE"/>
    </changeSet>

