<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                                       http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <!-- Создание таблицы user_info -->
    <changeSet id="createUserInfoTable" author="yourName">
        <createTable tableName="user_info">
            <column name="id_user_info" type="BIGINT">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="name" type="VARCHAR(255)"/>
            <column name="lastname" type="VARCHAR(255)"/>
            <column name="patronymic" type="VARCHAR(255)"/>
            <column name="birthday" type="DATE"/>
        </createTable>
    </changeSet>

    <!-- Добавление внешних ключей -->
    <changeSet id="addForeignKeysToUserInfo" author="yourName">
        <addForeignKeyConstraint baseTableName="user_info" baseColumnNames="id_user_info"
                                 constraintName="fk_users" referencedTableName="users"
                                 referencedColumnNames="id_user" onDelete="CASCADE"/>
        <addForeignKeyConstraint baseTableName="user_info" baseColumnNames="id_user_info"
                                 constraintName="fk_specification_dic" referencedTableName="specification_dic"
                                 referencedColumnNames="id_specification" onDelete="CASCADE"/>
    </changeSet>

    <!-- Добавляем индексы для улучшения производительности внешних ключей -->
    <changeSet id="addIndexesToUserInfo" author="yourName">
        <createIndex tableName="user_info" indexName="idx_fk_users" unique="false">
            <column name="id_user_info"/>
        </createIndex>
        <createIndex tableName="user_info" indexName="idx_fk_specification_dic" unique="false">
            <column name="id_user_info"/>
        </createIndex>
    </changeSet>

</databaseChangeLog>

