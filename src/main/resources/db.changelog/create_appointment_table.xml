<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                     http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">
    <changeSet id="create_appointment_table" author="postgres">
        <createTable tableName="appointment">
            <column autoIncrement="true" name="id_appointment" type="bigint">
                <constraints primaryKey="true"/>
            </column>
            <column name="dt_rec" type="DATE"/>
            <column name="description" type="varchar(600)"/>

            <column name="id_client" type="bigint">
                <constraints foreignKeyName="fk_users_1" referencedTableName="users" referencedColumnNames="id_user"/>
            </column>
            <column name="id_doctor" type="bigint">
                <constraints foreignKeyName="fk_users_2" referencedTableName="users" referencedColumnNames="id_user"/>
            </column>
            <column name="id_status" type="bigint">
                <constraints foreignKeyName="fk_status_1" referencedTableName="status_dic" referencedColumnNames="id_status"/>
            </column>

        </createTable>
    </changeSet>
</databaseChangeLog>