<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                                       http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <!-- Создание таблицы payment -->
    <changeSet id="createPaymentTable" author="yourName">
        <createTable tableName="payment">
            <column name="id_payment" type="BIGINT">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="date_pay" type="DATE"/>
            <column name="cost_pay" type="INT"/>
        </createTable>

        <!-- Ограничение для внешнего ключа -->
        <addForeignKeyConstraint baseTableName="payment" baseColumnNames="id_payment"
                                 constraintName="fk_appointment" referencedTableName="appointment"
                                 referencedColumnNames="id_appointment" onDelete="CASCADE"/>
    </changeSet>

</databaseChangeLog>
